@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />

@*bootstrap*@
<div class="container">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary"> Lista de categorías</h2>
        </div>
        <div class="col-6 text-right">
            @*link para crear nueva categoria, uso fontawesome*@
            <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i> Crear Nueva Categoría</a>
        </div>
    </div>

    <br />
    <br />
    @*id tblCategorias asi la puedo llamar desde categorias.js*@
    <table id="tblCategorias" class="table table-striped table-bordered" style="width:100%;">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Orden</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>

usar los estilos personalizados que estan en el archivo categoria.js en la carpeta root
@section Scripts{
    <script src="~/js/categoria.js"></script>
}
